# Remove all custom HOST settings to use React's defaults
PORT=3000

# Disable hot reloading which can cause connection issues
FAST_REFRESH=false
WDS_SOCKET_PORT=0

# Don't auto-open browser
BROWSER=none

# Suppress source map warnings
GENERATE_SOURCEMAP=false

# Force polling for file changes (more reliable)
CHOKIDAR_USEPOLLING=true